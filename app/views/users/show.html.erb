<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%# Gravatorは無料のサービスで、プロフィール写真をアップロードして、指定したメルアドと関連付けられる。 %>
        <%# gravatar_forヘルパーメソッドは他の場所で定義する %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>